<?xml version="1.0" encoding="UTF-8"?>

    <RelativeLayout android:layout_height="match_parent" android:layout_width="match_parent"
    android:background="#ffffff" xmlns:ads="http://schemas.android.com/apk/res-auto" xmlns:android="http://schemas.android.com/apk/res/android">


    <LinearLayout android:layout_height="match_parent" android:layout_width="match_parent" android:orientation="vertical">


    <ScrollView android:layout_height="match_parent" android:layout_width="match_parent">


    <LinearLayout android:layout_height="match_parent" android:layout_width="match_parent" android:orientation="vertical">


    <LinearLayout android:layout_height="wrap_content" android:layout_width="match_parent" 
        android:background="#28bcc2" android:orientation="vertical" android:padding="15dp">

    <TextView android:layout_height="wrap_content"  android:layout_width="match_parent" android:id="@+id/namehopital"
        android:text="New Text" android:textColor="#ffffff" android:textSize="20sp"/>

</LinearLayout>

    <TextView android:layout_height="wrap_content"  android:layout_width="match_parent" android:id="@+id/deschopital" android:text="New Text" android:textColor="#000"
        android:layout_margin="15dp" android:layout_gravity="center" android:gravity="center" android:textStyle="normal"/>


    <LinearLayout android:layout_height="wrap_content"  android:layout_width="match_parent"
        android:orientation="horizontal" android:gravity="center" android:layout_marginBottom="15dp" android:layout_marginRight="5dp" 
        android:layout_marginTop="15dp" android:layout_marginLeft="25dp">

    <ImageView android:layout_height="30dp" android:layout_width="30dp" android:background="@drawable/localisation"
         android:layout_gravity="center" android:layout_marginRight="25dp"/>

    <TextView android:layout_height="wrap_content"  android:layout_width="match_parent" android:id="@+id/adrhopital"
        android:text="New Text" android:textColor="#000"/>

</LinearLayout>


    <LinearLayout android:layout_height="wrap_content"  android:layout_width="match_parent"
        android:orientation="horizontal" android:gravity="left" android:layout_marginRight="5dp" android:layout_marginLeft="25dp">

    <ImageView android:layout_height="30dp" android:layout_width="30dp" android:background="@drawable/fixe" 
        android:layout_gravity="left" android:layout_marginRight="25dp"/>

    <TextView android:layout_height="wrap_content"  android:layout_width="wrap_content"
        android:id="@+id/fixhopital" android:text="New Text" android:textColor="#000"/>

</LinearLayout>


    <LinearLayout android:layout_height="wrap_content"  android:layout_width="match_parent" 
        android:orientation="horizontal" android:gravity="left" android:layout_marginBottom="15dp"
        android:layout_marginRight="5dp" android:layout_marginTop="15dp" android:layout_marginLeft="25dp">

    <ImageView android:layout_height="30dp" android:layout_width="30dp" android:background="@drawable/fax" 
        android:layout_marginRight="25dp"/>

    <TextView android:layout_height="wrap_content"  android:layout_width="wrap_content" 
        android:id="@+id/faxhopital" android:text="New Text" android:textColor="#000"/>

</LinearLayout>


    <LinearLayout android:layout_height="wrap_content"  android:layout_width="match_parent"
        android:orientation="horizontal" android:gravity="left" android:layout_marginBottom="15dp"
        android:layout_marginRight="5dp" android:layout_marginLeft="25dp">

    <ImageView android:layout_height="30dp" android:layout_width="30dp" 
        android:background="@drawable/mail2"  android:layout_gravity="center" android:layout_marginRight="25dp"/>

    <TextView android:layout_height="wrap_content"  android:layout_width="wrap_content" 
        android:id="@+id/mailhopital" android:text="New Text" android:textColor="#000"/>

</LinearLayout>


    <LinearLayout android:layout_height="wrap_content"  android:layout_width="match_parent"
        android:orientation="horizontal" android:gravity="left" android:layout_marginRight="5dp" android:layout_marginLeft="25dp">

    <ImageView android:layout_height="30dp" android:layout_width="30dp" 
        android:background="@drawable/website"  android:layout_marginRight="25dp"/>

    <TextView android:layout_height="wrap_content"  android:layout_width="wrap_content"  
        android:id="@+id/sitewebhopital" android:text="New Text" android:textColor="#000"/>

</LinearLayout>


    <LinearLayout android:layout_height="wrap_content"  android:layout_width="match_parent" 
        android:orientation="vertical" android:gravity="center" android:layout_marginBottom="10dp" android:layout_marginTop="20dp">

    <Button android:layout_height="wrap_content"  android:layout_width="wrap_content"
        android:background="@drawable/bac7" android:id="@+id/button16" android:text="voir sur map" android:textColor="#ffffff" android:textSize="18sp" 
        style="?android:attr/borderlessButtonStyle" android:textAllCaps="false" android:drawableLeft="@drawable/btn_position" 
        android:paddingRight="20dp" android:paddingLeft="20dp"/>

</LinearLayout>


 

</LinearLayout>

</ScrollView>

</LinearLayout>

</RelativeLayout>